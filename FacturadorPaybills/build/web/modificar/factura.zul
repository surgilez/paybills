                                        readonly="true" 
                                        class="input" 
                                    />
                                </div>
                                <div class="wrapper_input">
                                    <span>IVA 12%:</span>
                                    <decimalbox  
                                        format="###.##"  
                                        value="@bind(vm.ivaCotizacion)"
                                        readonly="true" 
                                        class="input" 
                                    />
                                </div>
                                <!--                                    <div class="wrapper_input">
                                    <span>IVA 13%:</span>
                                    <decimalbox  
                                        format="###.##"  
                                        value="@bind(vm.ivaCotizacion13)"
                                        readonly="true" 
                                        class="input" 
                                    />
                                </div>-->
                                <!--                                    <div class="wrapper_input">
                                    <span>IVA 14%:</span>
                                    <decimalbox  
                                        format="###.##"  
                                        value="@bind(vm.ivaCotizacion14)"
                                        readonly="true" 
                                        class="input" 
                                    />
                                </div>-->
                                <div class="wrapper_input">
                                    <span>IVA 15%:</span>
                                    <decimalbox  
                                        format="###.##"  
                                        value="@bind(vm.ivaCotizacion15)"
                                        readonly="true" 
                                        class="input" 
                                    />
                                </div>
                                

                            </div>
                            <div class="wrapper_data">
                                <div class="wrapper_input">
                                    <span>Base 0%:</span>
                                    <decimalbox  
                                        format="###.##"   
                                        value="@bind(vm.subTotalBaseCero)" 
                                        readonly="true"
                                        onChange="self.setValue(self.getValue().toUpperCase().trim());" 
                                        class="input" 
                                    />
                                </div>
                                <div class="wrapper_input" style="">
                                    <span>Cobrar:</span>
                                    <textbox style="    width: 90%;
                                        padding: 5px 10px;
                                        border: solid 1px #ccc;
                                        border-radius: 6px;
                                        outline: none;
                                        font-size: 12px;
                                        color: #333;"
                                             class="input" 
                                             constraint="/^[0-9]{1,9}(?:[.][0-9]{1,2})?$/:Ingrese solo numeros" 
                                             onOK="@command('calcularCambio')"
                                             value="@bind(vm.cobro)"
                                    />
                                </div>
                                <div class="wrapper_input">
                                    <span>Cambio:</span>
                                    <decimalbox  style="    width: 90%;
                                        padding: 5px 10px;
                                        border: solid 1px #ccc;
                                        border-radius: 6px;
                                        outline: none;
                                        font-size: 12px;
                                        color: #333;"
                                                  format="###.##"   
                                                  readonly="true" 
                                                  class="input"
                                                  value="@bind(vm.cambio)" 
                                    />
                                </div>
                               
                                
                                <div class="wrapper_input">
                                    <!--                                        <div class="wrapper_input wrapper_total">-->
                                    <span >
                                        <label value="Total:" style="color:#fbc620;text-align: center;font-size: 25px !important;"></label>
                                    </span>

                                    <decimalbox  
                                        style="color:#fbc620;text-align: center;font-size: 25px !important;"
                                        format="###.##"   
                                        value="@bind(vm.valorTotalCotizacion)"                                                 
                                        readonly="true"
                                        
                                    />
                                </div> 
                                <div class="wrapper_buttons">
                                
                                
                                    <!-- <button 
                                        class="btn_fact btn_primary"
